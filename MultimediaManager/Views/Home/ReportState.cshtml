@using MultimediaManager.Models
@{
    ViewBag.Title = "ReportState";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <form class="form-horizontal" role="form">
            <fieldset>
                
                <legend>Current State Report</legend>
                
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">Total Files</label>
                    <div class="col-sm-8 ">
                        @ViewBag.TotalFiles
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">Total Files Size</label>
                    <div class="col-sm-8 ">
                        @ViewBag.TotalSize kb
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">Total Images</label>
                    <div class="col-sm-8 ">
                        @ViewBag.TotalImages
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">Total Images Size</label>
                    <div class="col-sm-8 ">
                        @ViewBag.TotalImagesSize kb
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">Total Sounds</label>
                    <div class="col-sm-8 ">
                        @ViewBag.TotalSounds
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">Total Sounds Size</label>
                    <div class="col-sm-8 ">
                        @ViewBag.TotalSoundsSize kb
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">Total Videos</label>
                    <div class="col-sm-8 ">
                        @ViewBag.TotalVideos
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">Total Videos Size</label>
                    <div class="col-sm-8 ">
                        @ViewBag.TotalVideosSize kb
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">Top-sized Files</label>
                    <div class="col-sm-8 ">
                        @foreach(AllFile file in @ViewBag.TopSizeFiles)
                        {
                            @file.FilePath
                            @file.FileName
                            @: (
                            @file.FileSize 
                            @: kb)<br />
                        }
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">New Files</label>
                    <div class="col-sm-8 ">
                        @foreach (AllFile file in @ViewBag.NewFiles)
                        {
                            @file.FilePath
                            @file.FileName
                            <br />
                        }
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="textinput">Deleted Files</label>
                    <div class="col-sm-8 ">
                        @foreach (AllFile file in @ViewBag.DeletedFiles)
                        {
                            @file.FilePath
                            @file.FileName
                            <br />
                        }
                    </div>
                </div>
                
            </fieldset>
        </form>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->

